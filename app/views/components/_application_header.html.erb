<% if current_page?(root_path) %>
  <nav id="application-header" class="navbar navbar-home is-dark">
<% else %>
  <nav id="application-header" class="navbar is-dark">
<% end %>
<div class="container">
  <div class="navbar-brand">
    <a class="navbar-item" href="<%= root_path %>">
      <div class="logo">
        <img src="<%= asset_path 'logo4.png' %>" alt="Associated Students of Pomona College">
      </div>
      <div class="title is-6">
        Associated Students of<br>Pomona College
      </div>
    </a>

    <div class="navbar-burger burger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div class="navbar-menu">
    <div class="navbar-end">

      <!-- Show login and admin access buttons on top on mobile -->
      <div class="navbar-item is-hidden-tablet">
        <% unless logged_in? %>
          <div class="field is-grouped">
            <p class="control">
              <a href="<%= login_path %>" class="button is-info">
                <span>Login</span>
              </a>
            </p>
          </div>
        <% else %>
          <div class="field is-grouped">
            <% if is_admin? %>
              <p class="control">
                <a href="<%= polymorphic_path([current_user.role.to_sym, 'root'])%>" class="button is-danger">
                  <span>Admin</span>
                </a>
              </p>
            <% end %>
            <p class="control">
              <a href="<%= logout_path %>" class="button is-light">
                <span>Logout</span>
              </a>
            </p>
          </div>
        <% end %>
      </div>

      <!-- Home -->
      <a href="/" class="navbar-item">Home</a>

      <!-- Events -->
      <%= link_to "Events", :events, :class => "navbar-item" %>

      <!-- Menus -->
      <%= link_to "Menus", :menus, :class => "navbar-item" %>


      <!-- Housing Search / Reviews -->
      <%= link_to "Housing", :housing_rooms, :class => "navbar-item" %>

      <!-- Course Schedule / Reviews -->
      <div class="navbar-item has-dropdown is-hoverable">
        <div class="navbar-link">
          <span class="item-has-arrow">Courses</span>
        </div>
        <div class="navbar-dropdown">
          <div class="navbar-content">
            <%= link_to "Course Planner", :course_planner, :class => "navbar-item" %>
          </div>
          <div class="navbar-content">
            <%= link_to "Course Reviews", :course_reviews, :class => "navbar-item" %>
          </div>
          <div class="navbar-content">
            <%= link_to "Instructor Reviews", :instructor_reviews, :class => "navbar-item" %>
          </div>
        </div>
      </div>

      <!-- ASPC -->
      <div class="navbar-item has-dropdown is-hoverable is-mega">
        <div class="navbar-link" />
        <span class="item-has-arrow">ASPC</span>
      </div>
      <div id="blogDropdown" class="navbar-dropdown ">
        <div class="container is-fluid">
          <div class="columns">
            <div class="column">
              <h1 class="title is-6 is-mega-menu-title">Who We Are</h1>
              <div class="navbar-content">
                <%= link_to "Senators", senators_path, :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Staff Members", staff_path, :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Committee Members", static_path(page_name: "committee"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Pomona Events Committee", static_path(page_name: "pec"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Software Development Group", static_path(page_name: "software"), :class => "navbar-item" %>
              </div>
            </div>
            <div class="column">
              <h1 class="title is-6 is-mega-menu-title">What We Do</h1>
              <div class="navbar-content">
                <%= link_to "Positions", static_path(page_name: "positions"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Meetings and Minutes", static_path(page_name: "minutes"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Budget", static_path(page_name: "budget"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Constitution", static_path(page_name: "constitution"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Bylaws", static_path(page_name: "bylaws"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Elections Code", static_path(page_name: "elections"), :class => "navbar-item" %>
              </div>
            </div>
            <div class="column">
              <h1 class="title is-6 is-mega-menu-title">Other Resources</h1>
              <div class="navbar-content">
                <%= link_to "Senior Class Page", static_path(page_name: "senior-class-page"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Funding Request", static_path(page_name: "funding-request"), :class => "navbar-item" %>
              </div>
              <div class="navbar-content">
                <%= link_to "Agenda Item Submission", "https://docs.google.com/forms/d/e/1FAIpQLSfGztqoEVwBBYGDFB7bDlW11fOy3UXNtSug89mD0_1g-9CKNg/viewform", :class => "navbar-item" %>
              </div>
            </div>
          </div>
        </div>

        <div class="navbar-item">
          <div class="navbar-content">
            <div class="level is-mobile">
              <div class="level-left">
                <div class="level-item">
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- More Resources -->
    <div class="navbar-item has-dropdown is-hoverable">
      <div class="navbar-link">
        <span class="item-has-arrow">More Resources</span>
      </div>
      <div class="navbar-dropdown">
        <div class="navbar-content">
          <a href="https://tsl.news" class="navbar-item">The Student Life</a>
        </div>
        <div class="navbar-content">
          <a href="https://coopstore.pomona.edu" class="navbar-item">Coop Store</a>
        </div>
        <div class="navbar-content">
          <%= link_to "Coop Fountain", static_path(page_name: "coop-fountain"), :class => "navbar-item" %>
        </div>
        <div class="navbar-content">
          <a href="http://kspc.org" class="navbar-item">KSPC 88.7</a>
        </div>
        <div class="navbar-content">
          <a href="http://studio47.tv" class="navbar-item">Studio 47</a>
        </div>
        <div class="navbar-content">
          <a href="https://pomonastudents.org/5crideshare/" class="navbar-item">5C Rideshare</a>
        </div>
        <hr class="navbar-divider"/>
        <div class="navbar-content">
          <a href="https://pomonastudents.turbovote.org" class="navbar-item">TurboVote</a>
        </div>
        <hr class="navbar-divider"/>
        <div class="navbar-content">
          <%= link_to "API (Developers)", static_path(page_name: "api"), :class => "navbar-item" %>
        </div>
      </div>
    </div>

    <!-- Show login and admin access buttons as last items in the nav bar for screens larger than mobile -->
    <div class="navbar-item is-hidden-mobile">
      <% unless logged_in? %>
        <div class="field is-grouped">
          <p class="control">
            <a href="<%= login_path %>" class="button is-info">
              <span>Login</span>
            </a>
          </p>
        </div>
        <% else %>
          <div class="field is-grouped">
            <% if is_admin? %>
              <p class="control">
                <a href="<%= polymorphic_path([current_user.role.to_sym, 'root'])%>" class="button is-danger">
                  <span>Admin</span>
                </a>
              </p>
            <% end %>
            <p class="control">
              <a href="<%= logout_path %>" class="button is-light">
                <span>Logout</span>
              </a>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</nav>

<script>
    $(document).ready(function () {
        $("#application-header .burger").click(function () {

            // Toggle the class on both the burger and the menu
            $(this).toggleClass('is-active');
            $("#application-header .navbar-menu").toggleClass('is-active');

        })
    });
</script>