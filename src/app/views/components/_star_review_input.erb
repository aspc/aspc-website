<% id = local_assigns.fetch(:id) || 0 %>

<div class="rating-control is-clearfix">
  <fieldset class="rating" id="<%= id %>">
    <input type="radio" id="star5-<%= id %>" name="<%= id %>" value="5"/>
    <label class="full" for="star5-<%= id %>" title="5 stars"></label>
    <input type="radio" id="star4half-<%= id %>" name="<%= id %>" value="4 and a half"/>
    <label class="half" for="star4half-<%= id %>" title="4.5 stars"></label>
    <input type="radio" id="star4-<%= id %>" name="<%= id %>" value="4"/>
    <label class="full" for="star4-<%= id %>" title="4 stars"></label>
    <input type="radio" id="star3half-<%= id %>" name="<%= id %>" value="3 and a half"/>
    <label class="half" for="star3half-<%= id %>" title="3.5 stars"></label>
    <input type="radio" id="star3-<%= id %>" name="<%= id %>" value="3"/>
    <label class="full" for="star3-<%= id %>" title="3 stars"></label>
    <input type="radio" id="star2half-<%= id %>" name="<%= id %>" value="2 and a half"/>
    <label class="half" for="star2half-<%= id %>" title="2.5 stars"></label>
    <input type="radio" id="star2-<%= id %>" name="<%= id %>" value="2"/>
    <label class="full" for="star2-<%= id %>" title="Kinda bad - 2 stars"></label>
    <input type="radio" id="star1half-<%= id %>" name="<%= id %>" value="1 and a half"/>
    <label class="half" for="star1half-<%= id %>" title="1.5 stars"></label>
    <input type="radio" id="star1-<%= id %>" name="<%= id %>" value="1"/>
    <label class="full" for="star1-<%= id %>" title="1 star"></label>
    <input type="radio" id="starhalf-<%= id %>" name="<%= id %>" value="half"/>
    <label class="half" for="starhalf-<%= id %>" title="0.5 stars"></label>
  </fieldset>
</div>